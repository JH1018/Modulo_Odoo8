<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="action_teacher_export_wizard" model="ir.actions.act_window">
            <field name="name">Exportar Maestros</field>
            <field name="res_model">teacher.export.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        <record id="teacher_form_inherit_export" model="ir.ui.view">
            <field name="name">odooeduconnect.teacher.form.export</field>
            <field name="model">odooeduconnect_teacher</field>
            <field name="inherit_id" ref="Modulo_Odoo8.view_teacher_form_custom1"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet" position="before">
                    <header>
                        <button name="%(action_teacher_export_wizard)d"
                                string="Exportar PDF"
                                type="action"
                                class="oe_highlight"/>
                    </header>
                </xpath>
            </field>
        </record>
        <record id="view_teacher_export_wizard_form" model="ir.ui.view">
            <field name="name">teacher.export.wizard.form</field>
            <field name="model">teacher.export.wizard</field>
            <field name="arch" type="xml">
                <form string="Exportar Maestros a PDF">
                    <group>
                        <label string="Â¿Deseas exportar todos los maestros en PDF?" attrs="{'invisible': [('file_data','!=',False)]}"/>
                        <field name="file_data" filename="file_name" widget="binary" readonly="1" attrs="{'invisible': [('file_data','=',False)]}"/>
                        <field name="file_name" invisible="1"/>
                    </group>
                    <footer>
                        <button string="Exportar PDF" name="action_export_pdf" type="object" 
                                class="oe_highlight" attrs="{'invisible': [('file_data', '!=', False)]}"/>
                        <button string="Cerrar" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</openerp>
