<openerp>
    <data>
        <record id="view_exam_form_custom1" model="ir.ui.view">
            <field name="name">exam.form.custom1</field>
            <field name="model">odooeduconnect_exam</field>
            <field name="arch" type="xml">
                <form string="Examen">
                    <sheet class="oe_form_sheet">
                        <group>
                            <field name="name" placeholder="Nombre del examen"/>
                            <field name="date" placeholder="Fecha del examen"/>
                            <field name="subject_id" placeholder="Asignatura"/>
                        </group>
                        <notebook>
                            <page string="Preguntas">
                                <field name="question_ids" context="{'default_exam_id': active_id}" string="Preguntas">
                                    <form string="Pregunta">
                                        <sheet>
                                            <group>
                                                <field name="text" placeholder="Texto de la pregunta"/>
                                                <field name="exam_id" invisible="1"/>
                                            </group>
                                            <notebook>
                                                <page string="Respuestas">
                                                    <field name="answer_ids" context="{'default_question_id': active_id}">
                                                        <tree string="Respuestas" editable="bottom">
                                                            <field name="text" placeholder="Texto de la respuesta"/>
                                                            <field name="is_correct"/>
                                                        </tree>
                                                    </field>
                                                </page>
                                            </notebook>
                                        </sheet>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                        <div class="oe_clear"/>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</openerp>
